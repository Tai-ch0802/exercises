{
    "name": "tai/exercises",
    "type": "project",
    "require": {
        "squizlabs/php_codesniffer": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Algorithms\\": "algorithms/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-phpcbf": [
            "php vendor/bin/phpcbf --standard=PSR2 ./algorithms/",
            "php vendor/bin/phpcs --standard=PSR2 ./algorithms/"
        ]
    }
}
